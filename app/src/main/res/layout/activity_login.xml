<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg4"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".Login"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="350dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户注册"
                android:textSize="45sp"
                android:layout_marginTop="200dp"
                android:textColor="#B251C5D3"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/login_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="50dp"
                android:textColor="#68000000"
                android:gravity="center"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/username"
            />
            <EditText
                    android:id="@+id/login_input1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入账号"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:gravity="center"
            />
            <ImageView
                    android:id="@+id/check_1"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/wrong"
                    android:visibility="invisible"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/password"
            />
            <EditText
                    android:id="@+id/login_input2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="请输入密码"
                    android:gravity="center"
            />
            <ImageView
                    android:id="@+id/check_2"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/wrong"
                    android:visibility="invisible"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/password"
            />
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/password"
            />
            <EditText
                    android:id="@+id/login_input3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="请再次输入密码"
                    android:gravity="center"
            />
            <ImageView
                    android:id="@+id/check_3"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/wrong"
                    android:visibility="invisible"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/lightning"
            />
            <EditText
                    android:id="@+id/login_input4"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="请输入电话号码"
                    android:gravity="center"
            />
            <ImageView
                    android:id="@+id/check_4"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/wrong"
                    android:visibility="invisible"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <Button
                    android:id="@+id/login_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn4"
                    android:text="确认"
                    android:layout_marginLeft="80dp"
            />
            <Button
                    android:id="@+id/login_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn4"
                    android:text="取消"
                    android:layout_marginLeft="50dp"
            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>