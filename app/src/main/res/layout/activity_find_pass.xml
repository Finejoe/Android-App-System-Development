<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg4"
        android:orientation="vertical"
        tools:context=".FindPass">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="350dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="找回密码"
                android:textSize="45sp"
                android:layout_marginTop="200dp"
                android:textColor="#B251C5D3"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/find_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="50dp"
                android:textColor="#68000000"
                android:gravity="center"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/lightning"
            />
            <EditText
                    android:id="@+id/find_input1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="80dp"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:gravity="center"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/password"
            />
            <EditText
                    android:id="@+id/find_input2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="请输入验证码"
                    android:gravity="center"
            />
            <Button
                    android:id="@+id/find_btton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn4"
                    android:text="获取验证码"
                    android:layout_marginLeft="0dp"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/password"
            />
            <EditText
                    android:id="@+id/find_input3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="80dp"
                    android:inputType="textPassword"
                    android:hint="请输入新的密码"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:gravity="center"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <Button
                    android:id="@+id/find_btton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn4"
                    android:text="确认"
                    android:layout_marginLeft="80dp"
            />
            <Button
                    android:id="@+id/find_btton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn4"
                    android:text="取消"
                    android:layout_marginLeft="50dp"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>